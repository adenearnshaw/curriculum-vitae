{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "no-empty": [
            true, 
            "allow-empty-catch",
            "allow-empty-functions"
        ],
        "object-literal-sort-keys": false,
        "quotemark": [
            true,
            "single"
        ],        
        "variable-name": [
            true,
            "allow-leading-underscore"
        ]
    },
    "rulesDirectory": []
}