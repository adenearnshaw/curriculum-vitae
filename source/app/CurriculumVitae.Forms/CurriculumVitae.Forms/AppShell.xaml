<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="CurriculumVitae.Forms.AppShell"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:d="http://xamarin.com/schemas/2014/forms/design"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:views="clr-namespace:CurriculumVitae.Forms.Views"
       Title="CurriculumVitae.Forms"
       mc:Ignorable="d">

    <TabBar>
        <ShellContent Title="About me" Icon="tab_feed.png">
            <views:ObjectivesPage />
        </ShellContent>

        <ShellContent Title="Employment"
                      ContentTemplate="{DataTemplate views:EmploymentListPage}"
                      Icon="tab_about.png" />
        <ShellContent Title="Portfolio"
                      ContentTemplate="{DataTemplate views:PortfolioPage}"
                      Icon="tab_about.png" />

    </TabBar>
</Shell>